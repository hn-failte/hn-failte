// archive
.archive-title
  padding: 1rem
  text-align: center

// tag
// category
.category-lists, .tag-cloud
  text-align: center
  padding: 1rem 2rem

  a
    display: inline-block
    margin: 0 0.4rem
    text-decoration: none
    cursor: pointer

    &:hover
      color: $black !important
  
  &__title
    color: $gray
    font-size: 1rem
    margin: 0.5rem

.category-lists
  &-container
    text-align: left

  .category-list
    padding-inline-start: 0px
    
    &-item
      list-style: none

      &:hover
        &::before
          color: $blue

      &::before
        content: '📂'

    &-child
      .category-list-item
        &::before
          content: '📁'
        
        

    &-link
      color: $dark
      border-bottom: 1px dotted $gray

    &-count
      &::before
        content: " [ "
      &::after
        content: " ] "
